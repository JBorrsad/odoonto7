{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "@odoonto7/shared": ["./libs/shared"],
      "@odoonto7/shared/*": ["./libs/shared/*"]
    }
  },
  "include": [
    "libs/**/*",
    "services/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    "domain-driven-hexagon"
  ]
} 